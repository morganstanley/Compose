<Window x:Class="AnotherWpfThemeReceiverApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Left="-9999"
        Width="1400"
        Height="500">
    <Grid Margin="10">
        <Grid Margin="10">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <TextBlock Text="{Binding Path=Theme, RelativeSource={RelativeSource AncestorType=Window}, StringFormat='Theme: \{0\}'}"
                           FontSize="30"
                           FontFamily="Segoe Script"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>