<Window x:Class="DockManagerCoreExample.BarButton"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="WindowButton" Height="20" Width="100"
        WindowStyle="None" ShowInTaskbar="False">
    <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#E2EAF3" Offset="0" />
                <GradientStop Color="#C3CEDC" Offset="0.6" />
                <GradientStop Color="#A2B1C4" Offset="0.6" />
                <GradientStop Color="#B4C3DB" Offset="1" />
            </LinearGradientBrush>
        </Border.Background>
        <TextBox Background="Transparent" BorderThickness="0" HorizontalAlignment="Center">:::::::</TextBox>
    </Border>
</Window>
