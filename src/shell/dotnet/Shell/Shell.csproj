<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net6.0-windows</TargetFramework>
		<Nullable>enable</Nullable>
		<UseWPF>true</UseWPF>
		<EnableDefaultPageItems>false</EnableDefaultPageItems>
		<LangVersion>preview</LangVersion>
		<AssemblyName>ComposeUI-Shell</AssemblyName>
	</PropertyGroup>

	<ItemGroup>
		<None Remove="MainWindow.xaml" />
		<None Remove="WebWindow.xaml" />
	</ItemGroup>
	
	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Hosting" Version="7.0.1" />
		<PackageReference Include="Microsoft.Web.WebView2" Version="1.0.1823.32" />
		<PackageReference Include="System.CommandLine" Version="2.0.0-beta4.22272.1" />
	</ItemGroup>

	<ItemGroup>
		<Page Include="WebWindow.xaml">
			<Generator>MSBuild:Compile</Generator>
		</Page>
		<Page Include="MainWindow.xaml" />
	</ItemGroup>

	<ItemGroup>
		<None Update="appsettings.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Update="Manifest\exampleManifest.json">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</None>
	</ItemGroup>

	<ItemGroup>
		<Folder Include="Utilities\" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\..\fdc3\dotnet\DesktopAgent\src\DesktopAgent\DesktopAgent.csproj" />
		<ProjectReference Include="..\..\..\messaging\dotnet\src\Host\MorganStanley.ComposeUI.Messaging.Host.csproj" />
	</ItemGroup>

	<PropertyGroup>
		<Fdc3BundleOutput>$(ComposeUIRepositoryRoot)/src/shell/js/composeui-fdc3/dist/fdc3-iife-bundle.js</Fdc3BundleOutput>
	</PropertyGroup>

	<ItemGroup>
		<EmbeddedResource Include="$(Fdc3BundleOutput)">
		</EmbeddedResource>
	</ItemGroup>

	<Target Name="PreBuild" BeforeTargets="PrebuildEvent" Condition="!Exists('$(Fdc3BundleOutput)')">
		<Exec Command="cd $(ComposeUIRepositoryRoot)" />
		<Exec Command="npx lerna run build --scope @morgan-stanley/composeui-fdc3" />
	</Target>
</Project>